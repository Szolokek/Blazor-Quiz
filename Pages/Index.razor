@page "/"
@using Kviz.Model;
@using Kviz.Services;
@using Kviz.Migrations.Tables;
@inject NavigationManager Navigation

<div class="page-class">
    <div style="height: 80%;" class="button-div">
        <RadzenTextBox Placeholder="Session" Style="width: 90%" @bind-Value="@Session"/>
        <RadzenTextBox Placeholder="Nickname" Style="width: 90%" @bind-Value="@Nickname"/>
        <RadzenButton class="rz-ripple" Variant="Variant.Outlined" ButtonStyle="ButtonStyle.Secondary" Text="Join" Click="() => NavigateToNickName()" />
    </div>
    
    <div>
        <RadzenLink Text="Create" class="rz-ripple" Path="login"/>
        <span> your own quiz</span>
    </div>
    
</div>



@code
{
    string Session = "1";
    string Nickname = "Joe";
    void NavigateToNickName()
    {
        Navigation.NavigateTo($"/game/{Session}/{Nickname}");
    }

    
}